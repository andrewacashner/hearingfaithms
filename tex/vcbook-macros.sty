\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tex/vcbook-macros}[2019/05/29
Macros for semantic markup for Cashner villancico monograph]

\RequirePackage{xparse}
\RequirePackage{semantic-markup}[2020/01/29]
\RequirePackage{musicography}[2020/01/29]
\RequirePackage{octave}

% Style for musicography meters
\NewDocumentCommand{\liningfigures}{}{%
    \addfontfeatures{Numbers={Lining}}%
}
\RenewDocumentCommand{\musNumFont}{}{\liningfigures}

\RenewDocumentCommand{\meterCZ}{}{%
    \meterCplus{{\bfseries\itshape\large z}}%
}

% RANGES
% Range and number (e.g., m. 1 or mm. 2 for measures)
% #1 abbreviation, #2 number
\NewDocumentCommand{\range}{ m m }{#1.~#2}

\NewDocumentCommand{\measure} { m } {\range{m}{#1}}
\NewDocumentCommand{\measures}{ m } {\range{mm}{#1}}

\NewDocumentCommand{\poemline} { m }{\range{l}{#1}}
\NewDocumentCommand{\poemlines}{ m }{\range{ll}{#1}}

\NewDocumentCommand{\pagenum} { m } {\range{p}{#1}}
\NewDocumentCommand{\pagenums}{ m } {\range{pp}{#1}}

\NewDocumentCommand{\folio} { m }   {\range{f}{#1}}
\NewDocumentCommand{\folios}{ m }   {\range{ff}{#1}}

\NewDocumentCommand{\itemnum} { m } {\range{no}{#1}}
\NewDocumentCommand{\itemnums}{ m } {\range{nos}{#1}}

% OTHER SHORTHANDS: Symbols, spacing
\NewDocumentCommand{\sv}        { m }   {s.v.~\mentioned{#1}}
\NewDocumentCommand{\speaker}   { m }   {\textsc{#1}: }
\NewDocumentCommand{\et}        {}      {\&}
\NewDocumentCommand{\circa}     { m }   {ca.~#1}
\NewDocumentCommand{\tabitem}   {}      {\textbullet\enspace}
\NewDocumentCommand{\tabindent} {}      {\hspace{1em}}
\NewDocumentCommand{\strophe}   {}      {\tabindent}

% Archival signature
\NewDocumentCommand{\sig}       { m m } {\mbox{\emph{#1}}: \mbox{#2}} 

\NewDocumentCommand{\@foliotype}{ m }{\textsuperscript{#1}}
\NewDocumentCommand{\recto}{}{\@foliotype{R}}
\NewDocumentCommand{\verso}{}{\@foliotype{V}}

% Original text in brackets (in quotation)
\NewDocumentCommand{\addorig}   { m }   {\add{\foreign{#1}}}

% UNICODE MACROS
\RenewDocumentCommand{\Dots}{}{\add{…}} % U+2026
\NewDocumentCommand{\charAlpha}{}{α}

% SCRIPTURE REFERENCES
\RequirePackage{bibleref-parse}
\NewDocumentCommand{\scripture} { m } {\pbibleverse{#1}}
\newbiblerefstyle{chicago2}{%
    \biblerefstyle{chicago}%
    \renewcommand{\BRchapterstyle}[1]{##1}%
}
\biblerefstyle{chicago2}



